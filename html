<body>
    <div class="container">
        <h1>Сервис сокращения URL</h1>
        
        <div class="form-group">
            <input type="url" id="urlInput" placeholder="Введите URL для сокращения" required>
        </div>
        
        <button onclick="createShortUrl()">Сократить URL</button>
        
        <div id="result" class="result"></div>
        <div id="error" class="error"></div>
    </div>

    <script>
        async function createShortUrl() {
            const urlInput = document.getElementById('urlInput');
            const resultDiv = document.getElementById('result');
            const errorDiv = document.getElementById('error');
            
            const originalUrl = urlInput.value.trim();
            
            if (!originalUrl) {
                showError('Пожалуйста, введите URL');
                return;
            }
            
            try {
                const response = await fetch(`/create?url=${encodeURIComponent(originalUrl)}`);
                const data = await response.json();
                
                if (response.ok) {
                    showResult(data);
                } else {
                    showError(data.error || 'Произошла ошибка');
                }
            } catch (error) {
                showError('Ошибка сети: ' + error.message);
            }
        }
        
        function showResult(data) {
            const resultDiv = document.getElementById('result');
            const errorDiv = document.getElementById('error');
            
            errorDiv.style.display = 'none';
            resultDiv.innerHTML = `
                <strong>Оригинальный URL:</strong> ${data.original_url}<br>
                <strong>Сокращенный URL:</strong> 
                <a href="${data.short_url}" target="_blank">${data.short_url}</a>
            `;
            resultDiv.style.display = 'block';
        }
        
        function showError(message) {
            const resultDiv = document.getElementById('result');
            const errorDiv = document.getElementById('error');
            
            resultDiv.style.display = 'none';
            errorDiv.textContent = message;
            errorDiv.style.display = 'block';
        }
        
       ').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                createShortUrl();
            }
        });
    </script>
</body>
</html>
